<p id="notice"><%= notice %></p>

<h1>Listing Monsters</h1>

<table class='pretty'>
  <thead>
    <tr>
      <th><%= sortable "name", "Name" %></th>
      <th><%= sortable "power", "Power" %></th>
      <th><%= sortable "monster_type", "Monster Type" %></th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monsters.each do |monster| %>
      <tr>
        <td><%= monster.name %></td>
        <td><%= monster.power %></td>
        <td><%= monster.monster_type %></td>
        <td><%= monster.user.present? ? monster.user.email : '' %></td>
        <td><%= link_to 'Show', monster %></td>
        <td><%= link_to 'Edit', edit_monster_path(monster) %></td>
        <td><%= link_to 'Destroy', monster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

